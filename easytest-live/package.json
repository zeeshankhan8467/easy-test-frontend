{
  "name": "easytest-live",
  "version": "1.0.0",
  "description": "EasyTest Live - Classroom clicker-based exam application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:win:installer": "electron-builder --win --publish=never"
  },
  "keywords": ["electron", "clicker", "easytest", "education"],
  "author": "EasyTest",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "koffi": "^2.15.0"
  },
  "build": {
    "appId": "com.easytest.live",
    "productName": "EasyTest Live",
    "directories": { "output": "dist" },
    "files": [
      "main.js",
      "preload.js",
      "src/**/*",
      "EasyTestSDK_x64.dll",
      "node_modules/**/*",
      "package.json"
    ],
    "asarUnpack": ["EasyTestSDK_x64.dll"],
    "win": {
      "target": [{ "target": "nsis", "arch": ["x64"] }],
      "artifactName": "${productName}-${version}-Setup.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "EasyTest Live"
    }
  }
}
